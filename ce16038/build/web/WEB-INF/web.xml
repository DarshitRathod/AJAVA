<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.vvp.java.LoginController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>MultTable</servlet-name>
        <servlet-class>com.vvp.java.MultTable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisitorCounter</servlet-name>
        <servlet-class>com.vvp.java.VisitorCounter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentValidation</servlet-name>
        <servlet-class>com.vvp.java.StudentValidation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/logincontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MultTable</servlet-name>
        <url-pattern>/multtable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisitorCounter</servlet-name>
        <url-pattern>/visitorcounter.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentValidation</servlet-name>
        <url-pattern>/studentvalidation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
